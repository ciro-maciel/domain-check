# Domain Monitor - Environment Variables
# Copy this file to .env and fill in your credentials

# Domain to monitor (required)
DOMAIN=yourdomain1.com,yourdomain2.com,yourdomain3.com

# Email Notifications (Resend.com)
RESEND_API_KEY=re_XXXXX
ALERT_EMAIL=seu@email.com

# Discord/Slack Webhook (optional)
WEBHOOK_URL=

# Database path
DB_PATH=./data/domain-check.db

# Test mode - set to "true" to simulate domain as available
TEST_MODE=false
