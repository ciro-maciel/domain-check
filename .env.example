# Domain Monitor - Environment Variables
# Copy this file to .env and fill in your credentials

# Domain(s) to monitor - comma-separated for multiple
# Example: DOMAIN=example.click,mydomain.com,another.io
DOMAIN=example.click

# Email Notifications (Resend.com)
RESEND_API_KEY=re_XXXXX
ALERT_EMAIL=your@email.com

# Discord/Slack Webhook (optional)
WEBHOOK_URL=

# Database path
DB_PATH=./data/domain-check.db

# Test mode - set to "true" to simulate domain as available
TEST_MODE=false
